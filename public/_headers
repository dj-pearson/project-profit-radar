# API routes - strategic caching for blog/knowledge base
/api/blog/*
  Cache-Control: public, max-age=300, stale-while-revalidate=600

/api/knowledge-base/*  
  Cache-Control: public, max-age=300, stale-while-revalidate=600

/api/*
  Cache-Control: no-cache, no-store, must-revalidate

# Service worker - allow caching with validation
/sw.js
  Cache-Control: public, max-age=86400, must-revalidate

# HTML pages - NEVER cache to prevent asset hash mismatches
